@import url('http://fonts.googleapis.com/css?family=Press+Start+2P')

ml-fonts = 'Press Start 2P', arial, helvetica, sans-serif

bg-col   = #000028
fg-col   = invert(bg-col)
link-col = #FFD700

body
	color fg-col
	background-color bg-col
	font-family ml-fonts

h1
	text-align center
	text-transform uppercase

h2
	text-align center
	text-transform uppercase

h3
	text-align center
	text-transform uppercase
	line-height 1.5
	margin-bottom 20px

a
	&:link
		color link-col
	&:visited
		color lighten(desaturate(link-col, 30%), 30%)
	&:hover
		color lighten(link-col, 20%)
	&:active
		color darken(link-col, 20%)

#entries
	margin 20px

.date
	font-style italic

.entry
	margin 50px 0

.answer
	margin 0 20px

p
	font-size 0.75em
	line-height 1.5

#more
	width 100%
	text-align center
	font-size 0.70em

@media (min-width: 650px)
	#entries
		width 600px
		margin-left auto
		margin-right auto
